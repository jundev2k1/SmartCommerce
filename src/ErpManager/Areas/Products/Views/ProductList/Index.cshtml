@{
    ViewData[Constants.GLOBAL_KEY_TITLE] = _globalsLocalizer["Nav_Product_List"];
    ViewData[Constants.GLOBAL_KEY_CURRENT_PAGE] = "ProductList_Page";

    var breadcrumbs = new Breadcrumb[]
    {
        new Breadcrumb { Title = _globalsLocalizer["Nav_Home"].Value, Href="/" },
        new Breadcrumb { Title = _globalsLocalizer["Nav_Product_List"].Value, IsDisabled = true }
    };

    var hasResult = Model.PageData.Items.Any();
    var hasData = Model.PageData.TotalPage > 0;
}
@model ProductListViewModel

@await Component.InvokeAsync("Breadcrumb", breadcrumbs)

<section id="searchBar" class="site-card">
    <form name="searchForm" asp-route="@Constants.MODULE_PRODUCT_PRODUCTLIST_NAME" method="post">
        <div class="row">
            <div class="col-8">
                <div class="d-flex gap-1">
                    @await Component.InvokeAsync("SearchInput", new { name = "SearchFields.Keywords", value = Model.SearchFields.Keywords })
                    <input type="button" class="btn site-btn-outline-info site-rounded" value="@_globalsLocalizer["Btn_Filter"]" data-bs-toggle="collapse" href="#filterAdvancedCollapse" />
                </div>
            </div>
            <div class="col-4 d-flex justify-content-end gap-2">
                <button type="button" class="btn site-btn-outline-theme site-rounded-full" data-bs-toggle="modal" data-bs-target="#exportModal">@_globalsLocalizer["Btn_Export"]</button>
                <button type="button" class="btn site-btn-theme site-rounded-full">@_globalsLocalizer["Btn_Create"]</button>
            </div>
            <div class="col-12">
                <div class="collapse mt-3" id="filterAdvancedCollapse">
                    <div class="card card-body">
                        <h2 class="fs-4">@_globalsLocalizer["Title_SearchAdvanced"]</h2>
                        <ul class="row">
                            <li class="col-md-4 col-6">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.ProductId" class="form-label">@_fieldsLocalizer["Product_ProductId"]</label>
                                    <input type="text" asp-for="SearchFields.ProductId" class="form-control" id="productIdForSearch" placeholder="@_globalsLocalizer["PlaceHolder_SearchWith"] @_fieldsLocalizer["Product_ProductId"]...">
                                </div>
                            </li>
                            <li class="col-md-4 col-6">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.Status" class="form-label">@_fieldsLocalizer["Product_Status"]</label>
                                    <input type="text" asp-for="SearchFields.Status" class="form-control" id="statusForSearch" placeholder="@_globalsLocalizer["PlaceHolder_SearchWith"] @_fieldsLocalizer["Product_Status"]...">
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.TakeOverId" class="form-label">@_fieldsLocalizer["Product_TakeOverId"]</label>
                                    <input type="text" asp-for="SearchFields.TakeOverId" class="form-control" id="takeOverByForSearch" placeholder="@_globalsLocalizer["PlaceHolder_SearchWith"] @_fieldsLocalizer["Product_TakeOverId"]...">
                                </div>
                            </li>
                            <li class="col-md-8 col-12">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.ProductName" class="form-label">@_fieldsLocalizer["Product_Name"]</label>
                                    <input asp-for="SearchFields.ProductName" type="text" class="form-control" id="productNameForSearch" placeholder="@_globalsLocalizer["PlaceHolder_SearchWith"] @_fieldsLocalizer["Product_Name"]...">
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.DisplayPrice" class="form-label">@_fieldsLocalizer["Product_DisplayPrice"]</label>
                                    <select asp-for="SearchFields.DisplayPrice" class="form-select" id="displayPriceForSearch" aria-label="Display Price">
                                        <option value="" selected>@_globalsLocalizer["PlaceHolder_Select"]</option>
                                        <option value="0">@_fieldsLocalizer["Product_Price1"]</option>
                                        <option value="1">@_fieldsLocalizer["Product_Price2"]</option>
                                        <option value="2">@_fieldsLocalizer["Product_Price3"]</option>
                                    </select>
                                </div>
                            </li>
                            <li class="col-12">
                                <div class="row mb-3">
                                    <div class="col-md-3 col-6">
                                        <label asp-for="SearchFields.Address1" class="form-label">@_fieldsLocalizer["Product_Address1"]</label>
                                        <select asp-for="SearchFields.Address1" class="form-select select-search-address-1" id="Address1ForSearch" aria-label="Province">
                                        </select>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <div>
                                            <label asp-for="SearchFields.Address2" class="form-label">@_fieldsLocalizer["Product_Address2"]</label>
                                            <select asp-for="SearchFields.Address2" class="form-select select-search-address-2" id="Address2ForSearch" aria-label="District" data-parent-id="Address1ForSearch">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-12">
                                        <label asp-for="SearchFields.Address3" class="form-label">@_fieldsLocalizer["Product_Address3"]</label>
                                        <select asp-for="SearchFields.Address3" class="form-select select-search-address-3" id="Address3ForSearch" aria-label="Wards-township" data-parent-id="Address2ForSearch">
                                        </select>
                                    </div>
                                    <div class="col-md-3 col-12">
                                        <label asp-for="SearchFields.Address4" class="form-label">@_fieldsLocalizer["Product_Address4"]</label>
                                        <input type="text" asp-for="SearchFields.Address4" class="form-control" id="address4ForSearch" placeholder="@_globalsLocalizer["PlaceHolder_SearchWith"] @_fieldsLocalizer["Product_Address"]...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">@_fieldsLocalizer["Product_Price1"]</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinPrice1" class="form-control" id="minPrice1ForSearch" placeholder="@_globalsLocalizer["PlaceHolder_Min"]...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxPrice1" class="form-control" id="maxPrice1ForSearch" placeholder="@_globalsLocalizer["PlaceHolder_Max"]...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">@_fieldsLocalizer["Product_Price2"]</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinPrice2" class="form-control" id="minPrice2ForSearch" placeholder="@_globalsLocalizer["PlaceHolder_Min"]...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxPrice2" class="form-control" id="maxPrice2ForSearch" placeholder="@_globalsLocalizer["PlaceHolder_Max"]...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">@_fieldsLocalizer["Product_Price3"]</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinPrice3" class="form-control" id="minPrice3ForSearch" placeholder="@_globalsLocalizer["PlaceHolder_Min"]...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxPrice3" class="form-control" id="maxPrice3ForSearch" placeholder="@_globalsLocalizer["PlaceHolder_Max"]...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">@_fieldsLocalizer["Product_Size1"]</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinSize1" class="form-control" id="lengthFromForSearch" placeholder="@_globalsLocalizer["PlaceHolder_From"]...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxSize1" class="form-control" id="lengthToForSearch" placeholder="@_globalsLocalizer["PlaceHolder_To"]...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">@_fieldsLocalizer["Product_Size2"]</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinSize2" class="form-control" id="widthFromForSearch" placeholder="@_globalsLocalizer["PlaceHolder_From"]...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxSize2" class="form-control" id="widthToForSearch" placeholder="@_globalsLocalizer["PlaceHolder_To"]...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">@_fieldsLocalizer["Product_Size3"]</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinSize3" class="form-control" id="landAreaFromForSearch" placeholder="@_globalsLocalizer["PlaceHolder_From"]...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxSize3" class="form-control" id="landAreaToForSearch" placeholder="@_globalsLocalizer["PlaceHolder_To"]...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-6 col-12">
                                <div class="mb-3">
                                    <label class="form-label">@_fieldsLocalizer["Product_DateCreated"]</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="datetime" asp-for="SearchFields.DateCreatedFrom" class="form-control datetime-picker" id="dateCreatedFromForSearch" placeholder="@_globalsLocalizer["PlaceHolder_From"]...">
                                        ~
                                        <input type="datetime" asp-for="SearchFields.DateCreatedTo" class="form-control datetime-picker" id="dateCreatedToForSearch" placeholder="@_globalsLocalizer["PlaceHolder_To"]...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-6 col-12">
                                <div class="mb-3">
                                    <label class="form-label">@_fieldsLocalizer["Product_DateChanged"]</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="datetime" asp-for="SearchFields.DateChangedFrom" class="form-control" id="dateChangedFromForSearch" placeholder="@_globalsLocalizer["PlaceHolder_From"]...">
                                        ~
                                        <input type="datetime" asp-for="SearchFields.DateChangedTo" class="form-control" id="dateChangedToForSearch" placeholder="@_globalsLocalizer["PlaceHolder_To"]...">
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <div>
                            <input id="pageIndex" type="hidden" asp-for="PageIndex" />
                        </div>
                        <div class="d-flex gap-3 justify-content-end align-items-center">
                            <select asp-for="SearchFields.DelFlg" class="form-select w-25" aria-label="DeleteFlg">
                                <option selected value="false">@_valueTextsLocalizer["ValTxt_DelFlg_Normal"]</option>
                                <option value="true">@_valueTextsLocalizer["ValTxt_DelFlg_Deleted"]</option>
                            </select>
                            <input id="btnSubmitAdvanced" type="submit" class="btn site-btn-theme" value="@_globalsLocalizer["Btn_SearchAdvanced"]" />
                            <input id="btnResetForm" type="reset" class="btn site-btn-outline-theme" onclick="resetSearchForm()" value="@_globalsLocalizer["Btn_ResetForm"]" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<section id="bodyPageLoad" class="site-card mt-2">
    <div class="row">
        <div class="col-12">
            <table class="site-table site-table-hover site-border site-rounded-layout">
                <thead>
                    <tr>
                        <th scope="col" width="10%">@_fieldsLocalizer["Product_ProductId"]</th>
                        <th scope="col" width="25%">@_fieldsLocalizer["Product_Name"]</th>
                        <th class="text-center" scope="col" width="15%">@_fieldsLocalizer["Product_Price"]</th>
                        <th class="text-center" scope="col" width="40%">@_fieldsLocalizer["Product_Address"]</th>
                        <th class="text-center" scope="col" width="10%">@_fieldsLocalizer["Product_Status"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (hasResult)
                    {
                        @foreach (var item in Model.PageData.Items)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>
                                    <a asp-route="@Constants.MODULE_PRODUCT_PRODUCTDETAIL_NAME" asp-route-id="@item.ProductId">
                                        @item.Name
                                    </a>
                                </td>
                                <td class="text-end">@CommonUtility.GetProductDisplayPrice(item, "VND")</td>
                                <td class="text-end text-truncate">@item.Address1</td>
                                <td class="text-center">@item.Status</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td align="center" colspan="5">
                                @(_globalsLocalizer["ListPage_NoResult"])
                            </td>
                        </tr>
                    }
                </tbody>

                @if (hasData)
                {
                    <tfoot>
                        <tr>
                            <td colspan="5">
                                <div class="d-flex justify-content-between align-items-center">
                                    <p class="mb-0">
                                        @(_globalsLocalizer["ListPage_TotalResult"]): @(Constants.DEFAULT_PAGE_SIZE * (Model.PageIndex - 1) + Model.PageData.Items.Length)/@(Model.PageData.TotalRecord)
                                    </p>
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination">
                                            <li class="page-item">
                                                <a class="page-link @(Model.PageIndex == 1 ? "disabled" : string.Empty)" onclick="handlePaging(event, @CommonUtility.HandleLimitPage(Model.PageIndex, Model.PageData.TotalPage))" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                </a>
                                            </li>
                                            @for (var index = 1; index <= Model.PageData.TotalPage; index++)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link @(Model.PageIndex == index ? "disabled" : string.Empty)" onclick="handlePaging(event, @index)">@index</a>
                                                </li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link @(Model.PageIndex == Model.PageData.TotalPage ? "disabled" : string.Empty)" onclick="handlePaging(event, @CommonUtility.HandleLimitPage(Model.PageIndex, Model.PageData.TotalPage, isPrevious: false))" asp- aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</section>
<section id="ModalContent">
    <div class="modal fade" id="exportModal" tabindex="-1" aria-labelledby="exportModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exportModalLabel">@_globalsLocalizer["Btn_Export"]</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>
                        With less than a month to go before the European Union enacts new consumer privacy laws for its citizens, companies around the world are updating their terms of service agreements to comply.
                    </p>
                    <p>
                        The European Union’s General Data Protection Regulation (G.D.P.R.) goes into effect on May 25 and is meant to ensure a common set of data rights in the European Union. It requires organizations to notify users as soon as possible of high-risk data breaches that could personally affect them.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn site-btn-secondary" data-bs-dismiss="modal">@_globalsLocalizer["Btn_Close"]</button>
                    <button type="button" class="btn site-btn-primary">@_globalsLocalizer["Btn_Export"]</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    // $('#dateCreatedFromForSearch').datepicker();

    const handlePaging = (event, page = 1) => {
        event.preventDefault();

        const pageIndexInput = document.querySelector("#pageIndex");
        pageIndexInput.value = page;
        const searchForm = document.getElementsByName("searchForm")[0];
        searchForm.submit();
    }
</script>
