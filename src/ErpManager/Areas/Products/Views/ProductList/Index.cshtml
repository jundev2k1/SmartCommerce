@{
    ViewData[Constants.GLOBAL_KEY_TITLE] = _localizer["Nav_Product_List"];
    ViewData[Constants.GLOBAL_KEY_CURRENT_PAGE] = "ProductList_Page";

    var breadcrumbs = new Breadcrumb[]
    {
        new Breadcrumb { Title = _localizer["Nav_Home"].Value, Href="/" },
        new Breadcrumb { Title = _localizer["Nav_Product_List"].Value, IsDisabled = true }
    };

    var pageIndex = int.Parse(ViewData[Constants.VIEWDATA_KEY_PAGE_INDEX].ToStringOrEmpty());
}
@model (ProductModel[] Data, int TotalPage, int TotalRecord)

@await Component.InvokeAsync("Breadcrumb", breadcrumbs)

<section id="searchBar" class="site-card">
    <div class="row">
        <div class="col-8">
            <div class="d-flex gap-1">
                @await Component.InvokeAsync("SearchInput")
                <input type="button" class="btn site-btn-outline-info site-rounded" value="Filter" data-bs-toggle="collapse" href="#filterAdvancedCollapse" />
            </div>
        </div>
        <div class="col-4 d-flex justify-content-end gap-2">
            <button type="button" class="btn site-btn-outline-theme site-rounded-full" data-bs-toggle="modal" data-bs-target="#exportModal">Export</button>
            <button type="button" class="btn site-btn-theme site-rounded-full">Create</button>
        </div>
        <div class="col-12">
            <div class="collapse mt-3" id="filterAdvancedCollapse">
                <div class="card card-body">
                    <h2 class="fs-4">Search Advanced</h2>
                    <form asp-route="@Constants.MODULE_PRODUCT_PRODUCTLIST_NAME">
                        <ul class="row">
                            <li class="col-md-4 col-6">
                                <div class="mb-3">
                                    <label for="productIdForSearch" class="form-label">Product ID</label>
                                    <input type="text" class="form-control" id="productIdForSearch" placeholder="Search with ID...">
                                </div>
                            </li>
                            <li class="col-md-4 col-6">
                                <div class="mb-3">
                                    <label for="productIdForSearch" class="form-label">Status</label>
                                    <input type="text" class="form-control" id="productIdForSearch" placeholder="Search with ID...">
                                </div>
                            </li>
                            <li class="col-md-4 col-6">
                                <div class="mb-3">
                                    <label for="productIdForSearch" class="form-label">Delete status</label>
                                    <input type="text" class="form-control" id="productIdForSearch" placeholder="Search with ID...">
                                </div>
                            </li>
                            <li class="col-md-8 col-12">
                                <div class="mb-3">
                                    <label for="productNameForSearch" class="form-label">Product Name</label>
                                    <input type="text" class="form-control" id="productNameForSearch" placeholder="Search with name...">
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label for="productNameForSearch" class="form-label">Take Over By</label>
                                    <input type="text" class="form-control" id="productNameForSearch" placeholder="Search with name...">
                                </div>
                            </li>
                            <li class="col-12">
                                <div class="row mb-3">
                                    <div class="col-md-3 col-6">
                                        <label for="productNameForSearch" class="form-label">Address</label>
                                        <select class="form-select" aria-label="Province">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <label for="productNameForSearch" class="form-label">Address</label>
                                        <select class="form-select" aria-label="District">
                                            <option selected>Open this select menu</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label for="productNameForSearch" class="form-label">Address</label>
                                        <input type="text" class="form-control" id="address3ForSearch" placeholder="Search with address...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Price 1</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="text" class="form-control" id="price1FromForSearch" placeholder="Price from...">
                                        ~
                                        <input type="text" class="form-control" id="price1ToForSearch" placeholder="Price to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Price 2</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="text" class="form-control" id="price2FromForSearch" placeholder="Price from...">
                                        ~
                                        <input type="text" class="form-control" id="price2ToForSearch" placeholder="Price to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Price 3</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="text" class="form-control" id="price3FromForSearch" placeholder="Price from...">
                                        ~
                                        <input type="text" class="form-control" id="price3ToForSearch" placeholder="Price to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Length</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="text" class="form-control" id="lengthFromForSearch" placeholder="Length from...">
                                        ~
                                        <input type="text" class="form-control" id="lengthToForSearch" placeholder="Length to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Width</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="text" class="form-control" id="widthFromForSearch" placeholder="Width from...">
                                        ~
                                        <input type="text" class="form-control" id="widthToForSearch" placeholder="Width to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label for="productNameForSearch" class="form-label">Land Area</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="text" class="form-control" id="landAreaFromForSearch" placeholder="Land area from...">
                                        ~
                                        <input type="text" class="form-control" id="landAreaToForSearch" placeholder="Land area to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-6 col-12">
                                <div class="mb-3">
                                    <label for="productNameForSearch" class="form-label">Date Created</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="datetime" class="form-control" id="dateCreatedFromForSearch" placeholder="Date created from...">
                                        ~
                                        <input type="datetime" class="form-control" id="dateCreatedToForSearch" placeholder="Date created to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-6 col-12">
                                <div class="mb-3">
                                    <label for="productNameForSearch" class="form-label">Date Changed</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="text" class="form-control" id="dateChangedFromForSearch" placeholder="Date changed from...">
                                        ~
                                        <input type="text" class="form-control" id="dateChangedToForSearch" placeholder="Date changed to...">
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <div class="d-flex gap-3 justify-content-end align-items-center">
                            <select class="form-select w-25" aria-label="DeleteFlg">
                                <option selected value="0">Normal</option>
                                <option value="1">Deleted</option>
                            </select>
                            <input type="submit" class="btn site-btn-theme" value="Search Advanced" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="bodyPageLoad" class="site-card mt-2">
    <div class="row">
        <div class="col-12">
            <table class="site-table site-table-hover site-border site-rounded-layout">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Address</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>
                                <a asp-route="@Constants.MODULE_PRODUCT_PRODUCTDETAIL_NAME" asp-route-id="@item.ProductId">
                                    @item.Name
                                </a>
                            </td>
                            <td>@CommonUtility.GetProductDisplayPrice(item)</td>
                            <td>@item.Address1</td>
                            <td>@item.Status</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5">
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="mb-0">
                                    Total result: @(Constants.DEFAULT_PAGE_SIZE * (pageIndex - 1) + Model.Data.Length)/@(Model.TotalRecord)
                                </p>
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item">
                                            <a class="page-link @(pageIndex == 1 ? "disabled" : string.Empty)" asp-route="@Constants.MODULE_PRODUCT_PRODUCTLIST_NAME" asp-route-page="@CommonUtility.HandleLimitPage(pageIndex, Model.TotalPage)" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        @for (var index = 1; index <= Model.TotalPage; index++)
                                        {
                                            <li class="page-item">
                                                <a class="page-link @(pageIndex == index ? "disabled" : string.Empty)" asp-route="@Constants.MODULE_PRODUCT_PRODUCTLIST_NAME" asp-route-page="@index">@index</a>
                                            </li>
                                        }
                                        <li class="page-item">
                                            <a class="page-link @(pageIndex == Model.TotalPage ? "disabled" : string.Empty)" asp-route="@Constants.MODULE_PRODUCT_PRODUCTLIST_NAME" asp-route-page="@CommonUtility.HandleLimitPage(pageIndex, Model.TotalPage, isPrevious: false)" asp- aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>
<section id="ModalContent">
    <div class="modal fade" id="exportModal" tabindex="-1" aria-labelledby="exportModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exportModalLabel">Search Advanced</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>
                        With less than a month to go before the European Union enacts new consumer privacy laws for its citizens, companies around the world are updating their terms of service agreements to comply.
                    </p>
                    <p>
                        The European Union’s General Data Protection Regulation (G.D.P.R.) goes into effect on May 25 and is meant to ensure a common set of data rights in the European Union. It requires organizations to notify users as soon as possible of high-risk data breaches that could personally affect them.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn site-btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn site-btn-primary">Search</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $('#dateCreatedFromForSearch').datepicker();
</script>