@{
    ViewData[Constants.GLOBAL_KEY_TITLE] = _localizer["Nav_Product_List"];
    ViewData[Constants.GLOBAL_KEY_CURRENT_PAGE] = "ProductList_Page";

    var breadcrumbs = new Breadcrumb[]
    {
        new Breadcrumb { Title = _localizer["Nav_Home"].Value, Href="/" },
        new Breadcrumb { Title = _localizer["Nav_Product_List"].Value, IsDisabled = true }
    };

    var pageIndex = int.Parse(ViewData[Constants.VIEWDATA_KEY_PAGE_INDEX].ToStringOrEmpty());
    var hasResult = Model.PageData.Items.Any();
}
@model ProductListViewModel

@await Component.InvokeAsync("Breadcrumb", breadcrumbs)

<section id="searchBar" class="site-card">
    <form name="searchForm" asp-route="@Constants.MODULE_PRODUCT_PRODUCTLIST_NAME" method="post">
        <div class="row">
            <div class="col-8">
                <div class="d-flex gap-1">
                    @await Component.InvokeAsync("SearchInput", new { name = "SearchFields.Keywords" })
                    <input type="button" class="btn site-btn-outline-info site-rounded" value="Filter" data-bs-toggle="collapse" href="#filterAdvancedCollapse" />
                </div>
            </div>
            <div class="col-4 d-flex justify-content-end gap-2">
                <button type="button" class="btn site-btn-outline-theme site-rounded-full" data-bs-toggle="modal" data-bs-target="#exportModal">Export</button>
                <button type="button" class="btn site-btn-theme site-rounded-full">Create</button>
            </div>
            <div class="col-12">
                <div class="collapse mt-3" id="filterAdvancedCollapse">
                    <div class="card card-body">
                        <h2 class="fs-4">Search Advanced</h2>
                        <ul class="row">
                            <li class="col-md-4 col-6">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.ProductId" class="form-label">Product ID</label>
                                    <input type="text" asp-for="SearchFields.ProductId" class="form-control" id="productIdForSearch" placeholder="Search with ID...">
                                </div>
                            </li>
                            <li class="col-md-4 col-6">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.Status" class="form-label">Status</label>
                                    <input type="text" asp-for="SearchFields.Status" class="form-control" id="statusForSearch" placeholder="Search with ID...">
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.TakeOverId" class="form-label">Take Over By</label>
                                    <input type="text" asp-for="SearchFields.TakeOverId" class="form-control" id="takeOverByForSearch" placeholder="Search with name...">
                                </div>
                            </li>
                            <li class="col-md-8 col-12">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.ProductName" class="form-label">Product Name</label>
                                    <input asp-for="SearchFields.ProductName" type="text" class="form-control" id="productNameForSearch" placeholder="Search with name...">
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label asp-for="SearchFields.DisplayPrice" class="form-label">Display Price</label>
                                    <select asp-for="SearchFields.DisplayPrice" class="form-select" id="displayPriceForSearch" aria-label="Display Price">
                                        <option value="" selected>No value</option>
                                        <option value="0">Price 1</option>
                                        <option value="1">Price 2</option>
                                        <option value="2">Price 3</option>
                                    </select>
                                </div>
                            </li>
                            <li class="col-12">
                                <div class="row mb-3">
                                    <div class="col-md-3 col-6">
                                        <label asp-for="SearchFields.Address1" class="form-label">Province</label>
                                        <select asp-for="SearchFields.Address1" class="form-select" id="Address1ForSearch" aria-label="Province">
                                            <option value="" selected>No value</option>
                                            <option value="Binh Duong">Binh Duong</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <label asp-for="SearchFields.Address2" class="form-label">District</label>
                                        <select asp-for="SearchFields.Address2" class="form-select" id="Address2ForSearch" aria-label="District">
                                            <option value="" selected>No value</option>
                                            <option value="Thu Dau Mot">Thu Dau Mot</option>
                                            <option value="Thuan An">Thuan An</option>
                                            <option value="Nam Tan Uyen">Nam Tan Uyen</option>
                                            <option value="Bac Tan Uyen">Bac Tan Uyen</option>
                                            <option value="Bau Bang">Bau Bang</option>
                                            <option value="Phu Giao">Phu Giao</option>
                                            <option value="Ben Cat">Ben Cat</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3 col-12">
                                        <label asp-for="SearchFields.Address3" class="form-label">Wards/Township</label>
                                        <select asp-for="SearchFields.Address3" class="form-select" id="Address3ForSearch" aria-label="Wards-township">
                                            <option value="" selected>No value</option>
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3 col-12">
                                        <label asp-for="SearchFields.Address4" class="form-label">Street, Home number,...</label>
                                        <input type="text" asp-for="SearchFields.Address4" class="form-control" id="address4ForSearch" placeholder="Search with address...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Price 1</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinPrice1" class="form-control" id="minPrice1ForSearch" placeholder="Min Price 1...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxPrice1" class="form-control" id="maxPrice1ForSearch" placeholder="Max Price 1...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Price 2</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinPrice2" class="form-control" id="minPrice1ForSearch" placeholder="Min Price 2...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxPrice2" class="form-control" id="maxPrice1ForSearch" placeholder="Max Price 2...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Price 3</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinPrice3" class="form-control" id="minPrice1ForSearch" placeholder="Min Price 3...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxPrice3" class="form-control" id="maxPrice1ForSearch" placeholder="Max Price 3...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Length</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinSize1" class="form-control" id="lengthFromForSearch" placeholder="Length from...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxSize1" class="form-control" id="lengthToForSearch" placeholder="Length to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Width</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinSize2" class="form-control" id="widthFromForSearch" placeholder="Width from...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxSize2" class="form-control" id="widthToForSearch" placeholder="Width to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-4 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Land Area</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="number" asp-for="SearchFields.MinSize3" class="form-control" id="landAreaFromForSearch" placeholder="Land area from...">
                                        ~
                                        <input type="number" asp-for="SearchFields.MaxSize3" class="form-control" id="landAreaToForSearch" placeholder="Land area to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-6 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Date Created</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="datetime" asp-for="SearchFields.DateCreatedFrom" class="form-control" id="dateCreatedFromForSearch" placeholder="Date created from...">
                                        ~
                                        <input type="datetime" asp-for="SearchFields.DateCreatedTo" class="form-control" id="dateCreatedToForSearch" placeholder="Date created to...">
                                    </div>
                                </div>
                            </li>
                            <li class="col-md-6 col-12">
                                <div class="mb-3">
                                    <label class="form-label">Date Changed</label>
                                    <div class="d-flex gap-1 align-items-center">
                                        <input type="datetime" asp-for="SearchFields.DateChangedFrom" class="form-control" id="dateChangedFromForSearch" placeholder="Date changed from...">
                                        ~
                                        <input type="datetime" asp-for="SearchFields.DateChangedTo" class="form-control" id="dateChangedToForSearch" placeholder="Date changed to...">
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <div>
                            <input id="pageIndex" type="hidden" asp-for="PageIndex" value="@pageIndex" />
                        </div>
                        <div class="d-flex gap-3 justify-content-end align-items-center">
                            <select asp-for="SearchFields.DelFlg" class="form-select w-25" aria-label="DeleteFlg">
                                <option selected value="false">Normal</option>
                                <option value="true">Deleted</option>
                            </select>
                            <input id="btnSubmitAdvanced" type="submit" class="btn site-btn-theme" value="Search Advanced" />
                            <input id="btnResetForm" type="reset" class="btn site-btn-outline-theme" onclick="resetSearchForm()" value="Reset" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
<section id="bodyPageLoad" class="site-card mt-2">
    <div class="row">
        <div class="col-12">
            <table class="site-table site-table-hover site-border site-rounded-layout">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Address</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (hasResult)
                    {
                        @foreach (var item in Model.PageData.Items)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>
                                    <a asp-route="@Constants.MODULE_PRODUCT_PRODUCTDETAIL_NAME" asp-route-id="@item.ProductId">
                                        @item.Name
                                    </a>
                                </td>
                                <td>@CommonUtility.GetProductDisplayPrice(item)</td>
                                <td>@item.Address1</td>
                                <td>@item.Status</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td align="center" colspan="5">
                                No results were found
                            </td>
                        </tr>
                    }
                </tbody>

                @if (hasResult)
                {
                    <tfoot>
                        <tr>
                            <td colspan="5">
                                <div class="d-flex justify-content-between align-items-center">
                                    <p class="mb-0">
                                        Total result: @(2 * (pageIndex - 1) + Model.PageData.Items.Length)/@(Model.PageData.TotalRecord)
                                    </p>
                                    <nav aria-label="Page navigation">
                                        <ul class="pagination">
                                            <li class="page-item">
                                                <a class="page-link @(pageIndex == 1 ? "disabled" : string.Empty)" onclick="handlePaging(event, @CommonUtility.HandleLimitPage(pageIndex, Model.PageData.TotalPage))" aria-label="Previous">
                                                    <span aria-hidden="true">&laquo;</span>
                                                </a>
                                            </li>
                                            @for (var index = 1; index <= Model.PageData.TotalPage; index++)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link @(pageIndex == index ? "disabled" : string.Empty)" onclick="handlePaging(event, @index)">@index</a>
                                                </li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link @(pageIndex == Model.PageData.TotalPage ? "disabled" : string.Empty)" onclick="handlePaging(event, @CommonUtility.HandleLimitPage(pageIndex, Model.PageData.TotalPage, isPrevious: false))" asp- aria-label="Next">
                                                    <span aria-hidden="true">&raquo;</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</section>
<section id="ModalContent">
    <div class="modal fade" id="exportModal" tabindex="-1" aria-labelledby="exportModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exportModalLabel">Search Advanced</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>
                        With less than a month to go before the European Union enacts new consumer privacy laws for its citizens, companies around the world are updating their terms of service agreements to comply.
                    </p>
                    <p>
                        The European Union’s General Data Protection Regulation (G.D.P.R.) goes into effect on May 25 and is meant to ensure a common set of data rights in the European Union. It requires organizations to notify users as soon as possible of high-risk data breaches that could personally affect them.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn site-btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn site-btn-primary">Search</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    // $('#dateCreatedFromForSearch').datepicker();

    const handlePaging = (event, page = 1) => {
        event.preventDefault();

        const pageIndexInput = document.querySelector("#pageIndex");
        pageIndexInput.value = page;

        const searchForm = document.getElementsByName("searchForm")[0];
        searchForm.submit();
    }
</script>
