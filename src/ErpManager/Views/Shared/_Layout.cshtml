<!DOCTYPE html>
<html lang="@(ViewData[Constants.GLOBAL_KEY_LANGUAGE_CODE] ?? Constants.CONFIG_DEFAULT_LANGUAGE_OPTIONS)">
<head>
    <meta charset="@Constants.CONFIG_CHARSET_OPTIONS" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData[Constants.GLOBAL_KEY_TITLE] - @Constants.APPLICATION_NAME</title>
    @* Css import render *@
    @await Component.InvokeAsync("StyleSheet")
</head>
<body>
    <section id="startupJs">
        <script src="~/js/store.js"></script>
        <script src="~/js/common.js"></script>
        <script>
            showLoading(typeLoading.text);
        </script>
    </section>
    @await Component.InvokeAsync("Script")

    @* Main content *@
    <main id="page-load">
        @await Component.InvokeAsync("NavBar")
        <div class="render-content">
            @await Component.InvokeAsync("Header")
            <div class="main-content">
                @RenderBody()
            </div>
            @await Component.InvokeAsync("Footer")
        </div>
        <aside id="utilitySideBar">
            @await Component.InvokeAsync("ThemeSetting")
            @await Component.InvokeAsync("BackToTop")
        </aside>
    </main>

    @* Script import render *@
    @RenderSection("Scripts", required: false)
</body>
</html>
