@model PaginationComponentViewModel

<div class="d-flex justify-content-between align-items-center">
	<p class="mb-0">
		@(_localizer.Globals["ListPage_TotalResult"]): @Model.PaginationItemInfo
	</p>
	<nav aria-label="Page navigation">
		<ul class="pagination">
			<li class="page-item">
				<a  href="@Model.CreatePaginationUrl(1)" class="page-link @(Model.PageIndex == 1 ? "disabled" : string.Empty)" aria-label="Previous">
					<span aria-hidden="true">&laquo;</span>
				</a>
			</li>
			@{
				var pageRange = 3;
				var pageStart = Model.PageIndex - pageRange > 0
					? Model.PageIndex - pageRange
					: 1;
				var pageEnd = Model.PageIndex + pageRange <= Model.TotalPage
					? Model.PageIndex + pageRange
					: Model.TotalPage;
			}
			@for (var index = pageStart; index <= pageEnd; index++)
			{
				<li class="page-item">
					<a  href="@Model.CreatePaginationUrl(index)" class="page-link @(Model.PageIndex == index ? "disabled" : string.Empty)">@index</a>
				</li>
			}
			<li class="page-item">
				<a href="@Model.CreatePaginationUrl(Model.TotalPage)" class="page-link @(Model.PageIndex == Model.TotalPage ? "disabled" : string.Empty)" asp-aria-label="Next">
					<span aria-hidden="true">&raquo;</span>
				</a>
			</li>
		</ul>
	</nav>
</div>
