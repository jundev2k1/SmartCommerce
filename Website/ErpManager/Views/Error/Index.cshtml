@{
    var message = new
    {
        Code = "404",
        Message = "System error: page not found"
    };
}
<style>
    .error-page {
        width: 100%;
        height: 100%;
        position: relative;
    }

        .error-page .wrapper {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
</style>
<section class="error-page">
    <div class="wrapper">
        <div class="content">
            <div class="error-content">
                <h2>@message.Code</h2>
                <p>@message.Message</p>
            </div>
            <div class="error-control">
                <a asp-route="Home" class="btn btn-success">BACK HOME</a>
                <a href="#" class="btn btn-outline-success">CONTACT US</a>
            </div>
        </div>
    </div>
</section>