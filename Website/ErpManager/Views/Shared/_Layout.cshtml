<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Constants.APPLICATION_NAME</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome.pro/fontawesome.pro.6.0.0.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/toastr/css/toastr.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <main id="page-load">
        @await Component.InvokeAsync("NavBar")
        <div class="render-content position-relative w-100">
            @await Component.InvokeAsync("Header")
            @RenderBody()
            @await Component.InvokeAsync("Footer")
        </div>
        @await Component.InvokeAsync("ThemeSetting")
    </main>
    <section id="script">
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.8/umd/popper.min.js" integrity="sha512-TPh2Oxlg1zp+kz3nFA0C5vVC6leG/6mm1z9+mA81MI5eaUVqasPLO8Cuk4gMF4gUfP5etR73rgU/8PNMsSesoQ==" crossorigin="anonymous" referrerpolicy="no-referrer" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
        <script src="~/lib/toastr/js/toastr.min.js" asp-append-version="true"></script>
        <script type="module" src="~/js/script.js" asp-append-version="true"></script>
    </section>
    @RenderSection("Scripts", required: false)
</body>
</html>
