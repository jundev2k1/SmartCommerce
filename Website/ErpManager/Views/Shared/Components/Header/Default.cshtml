<style>
    .header {
        width: 100%;
        position: relative;
    }

        .header .wrapper {
            background: var(--site-theme-operating);
            border-radius: 4px;
            padding: .5rem 1rem;
            margin: .5rem;
        }

            .header.sticky .wrapper {
                width: 100%;
                position: sticky;
                top:0;
                left: 0;
            }

            .header .wrapper .title h1 {
                font-size: 28px;
                margin-bottom: 0;
            }

            .header .wrapper .sub-navbar {
                display: flex;
                justify-content: flex-end;
            }
</style>
<div class="header">
    <div class="wrapper">
        <div class="row align-items-center">
            <div class="title col-md-4">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="sub-navbar col-md-8 gap-1">
                <div class="user-info">asd</div>
                <div class="user-notification">asd</div>
            </div>
        </div>
    </div>
</div>